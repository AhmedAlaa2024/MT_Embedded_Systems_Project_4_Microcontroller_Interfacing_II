#include "HCSR04_ultrasonic_sensor.h"
#include "lcd.h"

int main(void)
{
	/* Setup Configurations */
	LCD_init();
	LCD_displayString("Distance = ");
	Ultrasonic_init();

	/* Super Loop */
	while(1)
	{
		LCD_moveCursor(0, 11);
		LCD_intgerToString(Ultrasonic_readDistance());
	}
}
